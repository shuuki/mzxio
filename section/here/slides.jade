.swiper-container
  .swiper-wrapper
    for image in public.section.here.gallery._contents
      .swiper-slide
        //p what happens if.....
        img(data-src="../../section/here/gallery/#{image}").swiper-lazy
        //.swiper-lazy-preloader.swiper-lazy-preloader-white
  .swiper-button-next.swiper-button-white
  .swiper-button-prev.swiper-button-white

style
  include swiper.css

script.
  var swiper = new Swiper('.swiper-container', {
    centeredSlides: true,
    grabCursor: true,
    keyboardControl: true,
    loop: true,
    nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',
    scrollbarHide: true,
    slidesPerView: 'auto',
    spaceBetween: 18,
    preloadImages: false,
    lazyLoading: true
    //autoplay: 30000,
    //autoplayDisableOnInteraction: true
  });
